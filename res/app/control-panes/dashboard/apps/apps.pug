.widget-container.fluid-height.stf-apps(ng-controller='AppsCtrl')
  .heading
    span(translate)
    button.btn.btn-primary-outline.icon-app.pull-right(ng-click='reboot()').color-pink
      i.fa.fa-stop-circle.fa-lg.color-blue

    button.btn.btn-primary-outline.icon-app.pull-right(ng-click='openSettings()')
      i.fa.fa-gear.fa-lg.color-darkgray

    button.btn.btn-primary-outline.icon-app.pull-right(ng-click='openStore()').color-pink
      i.fa.fa-shopping-cart.fa-lg.color-blue

    button.btn.btn-primary-outline.icon-app.pull-right(ng-click='clickPower()')
      i.fa.fa-power-off.fa-lg.color-darkgray

    button.btn.btn-primary-outline.icon-app.pull-right(ng-click='camera()')
      i.fa-camera-retro.fa-lg.color-darkgreen

    button.btn.btn-primary-outline.icon-app.pull-right(ng-click='openWiFiSettings()')
      i.fa.fa-wifi.fa-lg.color-skyblue
